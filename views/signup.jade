extends layout

block content
  //- h1= title
  //- p Welcome to #{title}
  .main.container
      include header/login-header
    .row
      .col-md-6.col-md-offset-3
        //- h1.display-4.m-b-2 #{title}

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='Contact') Contact:
            input#favoriteBook.form-control(type='text', placeholder='Contact' name='contact')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          div.col-md-6
           button.btn.btn-primary(type='submit') Sign up
          div.col-md-6 #[a(href='/') login]
    include footer/login-footer
